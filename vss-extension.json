{
    "manifestVersion": 1,
    "id": "AzureOpenAiCopilot",
    "name": "Azure OpenAI Copilot",
    "version": "1.0.1",
    "publisher": "Plain",
    "galleryFlags": [
        "Public",
        "Preview"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Using a GPT model to review pull requests in Azure DevOps. Can use Azure OpenAI or OpenAI models. Supports API Key and Managed Identity authentication. Managed Identity can be provided by service connections or by the agent itself.",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/icon.png"
    },
    "tags": [
        "OpenAI",
        "GPT",
        "pullRequest",
        "copilot",
        "review"
    ],
    "files": [
        {
            "path": "GPTCodeReview"
        }
    ],
    "repository": {
        "type": "git",
        "uri": "https://github.com/plain-insure/azure-pipeline-gpt-pr-review"
    },
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "contributions": [
        {
            "id": "GPTCodeReview",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "GPTCodeReview"
            }
        }
    ]
}
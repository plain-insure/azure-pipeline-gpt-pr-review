{
    "manifestVersion": 1,
    "id": "AzureOpenAiCopilot",
    "name": "Azure OpenAI Copilot",
    "version": "1.0.3",
    "publisher": "Plain",
    "galleryFlags": [
        "Public",
        "Preview"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Review Azure DevOps PRs using Azure OpenAI or OpenAI models. Supports API Key and Managed Identity authentication.",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/icon.png"
    },
    "tags": [
        "OpenAI",
        "GPT",
        "pullRequest",
        "copilot",
        "review"
    ],
    "files": [
        {
            "path": "GPTCodeReview"
        }
    ],
    "repository": {
        "type": "git",
        "uri": "https://github.com/plain-insure/azure-pipeline-gpt-pr-review"
    },
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "contributions": [
        {
            "id": "GPTCodeReview",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "GPTCodeReview"
            }
        }
    ]
}